{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@qiwi/pijma-core": [
        "../core/src/main/ts"
      ],
      "@qiwi/pijma-desktop": [
        "../desktop/src/main/ts"
      ]
    }
  },
  "include": [
    "./src/main/ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
