{
  "name": "@qiwi/pijma-mobile",
  "version": "0.0.0",
  "type": "module",
  "main": "./lib/es5/index.js",
  "module": "./lib/es6/index.js",
  "types": "./lib/dts/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/dts/index.d.ts",
      "import": "./lib/es6/index.js",
      "require": "./lib/es5/index.js"
    }
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf lib styleguide/lib node_modules",
    "build": "concurrently 'npm:build:*'",
    "build:es5": "swc src -d lib/es5 --config-file swc.es5.json && tsc-esm-fix --target=lib/es5 --fillBlank",
    "build:es6": "swc src -d lib/es6 --config-file swc.es6.json && tsc-esm-fix --target=lib/es6 --fillBlank",
    "build:dts": "tsc --outDir lib/dts --emitDeclarationOnly",
    "build:guide": "styleguidist --config styleguide.config.cjs build",
    "start": "concurrently 'npm:guide:start' 'npm:chrome' && concurrently 'npm:chrome:stop'",
    "test": "concurrently 'npm:server:start' 'npm:chrome:start' 'npm:visual:test' && concurrently 'npm:chrome:stop' 'npm:server:stop'",
    "guide": "styleguidist --config styleguide.config.cjs server",
    "server:start": "docker run --name mobile-server -d --rm -p 7070:80 -v $(pwd)/styleguide/lib:/usr/share/nginx/html nginx",
    "server:stop": "docker stop mobile-server || exit 0",
    "chrome:start": "docker run --name mobile-chrome -d --rm -p 7171:3000 --add-host=host.docker.internal:host-gateway browserless/chrome",
    "chrome:stop": "docker stop mobile-chrome || exit 0",
    "visual:test": "wait-on http-get://localhost:7070/ http-get://localhost:7171/ && styleguidist-visual test --config styleguide.visual.config.cjs",
    "visual:approve": "styleguidist-visual approve --config styleguide.visual.config.cjs",
    "lint": "eslint --fix src styleguide/components && prettier --loglevel silent --write src styleguide/components"
  },
  "files": [
    "README.md",
    "lib"
  ],
  "dependencies": {
    "@qiwi/pijma-core": "workspace:*"
  },
  "devDependencies": {
    "@qiwi/pijma-infra": "workspace:*",
    "concurrently": "7.2.2",
    "css-loader": "4.3.0",
    "eslint": "8.19.0",
    "eslint-config-qiwi": "1.17.3",
    "fast-glob": "3.2.11",
    "file-loader": "6.2.0",
    "husky": "8.0.1",
    "minimist": "1.2.6",
    "prettier": "2.7.1",
    "prettier-config-qiwi": "1.7.2",
    "react-docgen-typescript": "patch:react-docgen-typescript@npm%3A2.2.2#~/.yarn/patches/react-docgen-typescript-npm-2.2.2-afb9698a32.patch",
    "react-styleguidist": "11.2.0",
    "react-styleguidist-visual": "patch:react-styleguidist-visual@npm%3A0.9.0#~/.yarn/patches/react-styleguidist-visual-npm-0.9.0-c05bb39789.patch",
    "style-loader": "2.0.0",
    "ts-patch": "2.0.1",
    "tsc-esm-fix": "2.18.0",
    "typescript": "4.4.4",
    "wait-on": "6.0.1",
    "webpack": "4.46.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/pijma.git"
  },
  "bugs": {
    "url": "https://github.com/qiwi/pijma/issues"
  },
  "homepage": "https://github.com/qiwi/pijma/#readme"
}
