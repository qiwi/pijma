{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "transform": "ts-react-display-name",
        "onlyFileRoot": false,
        "classTypes": [
          "React.Component",
          "React.PureComponent",
          "Component",
          "PureComponent"
        ],
        "funcTypes": [
          "React.FunctionComponent",
          "React.FC",
          "FC",
          "FunctionComponent"
        ],
        "factoryFuncs": [
          "React.forwardRef",
          "React.memo",
          "forwardRef",
          "memo",
          "styled"
        ]
      }
    ]
  }
}
