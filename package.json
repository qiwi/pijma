{
  "name": "@qiwi/pijma",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach --parallel --topological-dev --no-private --interlaced run clean",
    "build": "yarn workspaces foreach --parallel --topological-dev --no-private --interlaced run build",
    "watch": "yarn workspaces foreach --parallel --topological-dev --no-private --interlaced run watch",
    "test:unit": "yarn workspaces foreach --parallel --interlaced run lint",
    "test:full": "yarn workspaces foreach --parallel --interlaced run test"
  },
  "resolutions": {
    "@types/react": "16.14.28",
    "@types/react-dom": "16.9.16",
    "glob-parent": "5.1.2",
    "node-forge": "1.3.1",
    "pixelmatch": "patch:pixelmatch@npm%3A5.3.0#~/.yarn/patches/pixelmatch-npm-5.3.0-662974dec2.patch",
    "pngjs": "6.0.0",
    "puppeteer": "15.5.0",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "term-img": "5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/pijma.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qiwi/pijma/issues"
  },
  "homepage": "https://github.com/qiwi/pijma/#readme",
  "packageManager": "yarn@4.0.0-rc.13"
}
