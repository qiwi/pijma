{
  "name": "@qiwi/pijma",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach --parallel --topological-dev --no-private run clean",
    "build": "yarn workspaces foreach --parallel --topological-dev --no-private run build",
    "watch": "yarn workspaces foreach --parallel --topological-dev --no-private run watch",
    "test": "yarn lint",
    "test:report": "yarn test",
    "test:unit": "yarn test",
    "lint": "yarn workspaces foreach -p run lint"
  },
  "resolutions": {
    "@types/react": "16.14.28",
    "@types/react-dom": "16.9.16",
    "glob-parent": "5.1.2",
    "node-forge": "1.3.1",
    "react": "16.14.0",
    "react-dom": "16.14.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/pijma.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qiwi/pijma/issues"
  },
  "homepage": "https://github.com/qiwi/pijma/#readme",
  "packageManager": "yarn@4.0.0-rc.13"
}
