{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@qiwi/pijma-core": [
        "./core/src"
      ],
      "@qiwi/pijma-core/*": [
        "./core/src/*"
      ],
      "@qiwi/pijma-desktop": [
        "./desktop/src"
      ],
      "@qiwi/pijma-desktop/*": [
        "./desktop/src/*"
      ],
      "@qiwi/pijma-mobile": [
        "./mobile/src"
      ],
      "@qiwi/pijma-mobile/*": [
        "./mobile/src/*"
      ]
    }
  }
}
