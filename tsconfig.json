{
  "extends": "./tsconfig.base.json",

  "exclude": ["node_modules"],

  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "esModuleInterop": true,

    "baseUrl": "./packages",
    "paths": {
      "@qiwi/pijma-core": [
        "./core/src"
      ],
      "@qiwi/pijma-core/*": [
        "./core/src/*"
      ],
      "@qiwi/pijma-desktop": [
        "./desktop/src"
      ],
      "@qiwi/pijma-desktop/*": [
        "./desktop/src/*"
      ],
      "@qiwi/pijma-mobile": [
        "./mobile/src"
      ],
      "@qiwi/pijma-mobile/*": [
        "./mobile/src/*"
      ]
    }
  }
}
