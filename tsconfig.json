{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@qiwi/pijma-app": [
        "./app/src"
      ],
      "@qiwi/pijma-app/*": [
        "./app/src/*"
      ],
      "@qiwi/pijma-core": [
        "./core/src"
      ],
      "@qiwi/pijma-core/*": [
        "./core/src/*"
      ],
      "@qiwi/pijma-desktop": [
        "./desktop/src"
      ],
      "@qiwi/pijma-desktop/*": [
        "./desktop/src/*"
      ],
      "@qiwi/pijma-landing": [
        "./landing/src"
      ],
      "@qiwi/pijma-landing/*": [
        "./landing/src/*"
      ],
      "@qiwi/pijma-media": [
        "./media/src"
      ],
      "@qiwi/pijma-media/*": [
        "./media/src/*"
      ],
      "@qiwi/pijma-mobile": [
        "./mobile/src"
      ],
      "@qiwi/pijma-mobile/*": [
        "./mobile/src/*"
      ]
    }
  }
}
